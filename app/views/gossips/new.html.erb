<h1>Créer un nouveau potin</h1>

<!-- On lui passe le gossip initialisé avec new @gossip :  -->
<!-- # On utilise directement dans la doc de Rails   :  form_for   -->
<!-- form_tag url_for(action: 'create'), method: "post" do  POURQUOI FAIRE UN CREATE ? -->

<!-- Gestion des messages d'erreur -->
<% if @gossip.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
    <ul>
      <% @gossip.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_for @gossip do |f| %>

  <div class="form-group">
    <label>Titre du Gossip</label>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Contenu du Gossip</label>
    <%= f.text_area :content, class: "form-control", size: "20x7" %>
  </div>

  <div class="form-group">
    <%= f.submit "Créer le Gossip", :class => "btn btn-success" %>
  </div>

<% end %>

