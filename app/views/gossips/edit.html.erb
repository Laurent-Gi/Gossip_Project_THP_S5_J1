<h1>Editer un potin</h1>

<!-- On lui passe le gossip sélectionné à édité @gossip :  (  Gossip.find(params[:id])  ) -->

<!-- # On utilise directement dans la doc de Rails   :  form_for   -->

 <!-- form_tag url_for(action: 'create'), method: "post" do  POURQUOI FAIRE UN CREATE ? -->

<%= form_for @gossip do |f| %>

  <div class="form-group">
    <label>Titre du Gossip</label>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Contenu du Gossip</label>
    <%= f.text_area :content, class: "form-control", size: "20x7" %>
  </div>

  <div class="form-group">
    <%= f.submit "Modifier le Gossip", :class => "btn btn-success" %>
  </div>

<% end %>
